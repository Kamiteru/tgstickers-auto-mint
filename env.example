# ===== ОСНОВНЫЕ НАСТРОЙКИ =====
# Required: JWT token from Stickerdom (Local Storage -> token)
STICKERDOM_JWT_TOKEN=your_jwt_token_here

# Payment methods: TON, STARS, or TON,STARS for both
PAYMENT_METHODS=STARS

# ===== TON WALLET CONFIGURATION =====
# Required if TON is included in PAYMENT_METHODS
TON_SEED_PHRASE=your_ton_wallet_seed_phrase_here
TON_ENDPOINT=mainnet

# ===== TELEGRAM STARS PAYMENT =====
# Required if STARS is included in PAYMENT_METHODS
# Get from https://my.telegram.org/apps

# Telegram API credentials for Stars payments (Telethon)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+1234567890
TELEGRAM_SESSION_NAME=stars_payment_session

# ===== CAPTCHA CONFIGURATION =====
# Automatic captcha solving via Anti-captcha.com
CAPTCHA_ENABLED=true
ANTICAPTCHA_API_KEY=your_anticaptcha_api_key_here
CAPTCHA_TIMEOUT=300

# ===== TRADING SETTINGS =====
# TON gas amount for transactions
GAS_AMOUNT=0.1

# Delay between purchases (seconds)
PURCHASE_DELAY=1

# ===== MONITORING SETTINGS =====
# Collection check interval (seconds)
COLLECTION_CHECK_INTERVAL=1

# Retry attempts when collection not found
COLLECTION_NOT_FOUND_RETRY=3

# Maximum retries per API request
MAX_RETRIES_PER_REQUEST=5

# Request timeout (seconds)
REQUEST_TIMEOUT=10

# ===== PERFORMANCE CACHE SETTINGS =====
# Balance cache refresh interval (seconds)
CACHE_BALANCE_INTERVAL=2.0

# Price cache refresh interval (seconds)
CACHE_PRICE_INTERVAL=10.0
